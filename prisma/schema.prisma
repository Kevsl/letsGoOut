// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(uuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String?
  lastName  String?


  @@map("users")
}

model activity {
  id        String     @id @default(uuid())
  name  String
  description  String
  date  String
  location  String
  latitude String
  longitude String
  maxParticipant Int
  participant Int
  isActive String
  createdAt  String
  updatedAt  String
  material String
  photo String
  user String
  category String

}
